<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/even_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="@dimen/fifteen_padding"
        android:layout_marginTop="@dimen/eight_margin"
        card_view:cardCornerRadius="4dp"
        android:layout_marginRight="120dp"
        android:layout_marginLeft="@dimen/eight_margin"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:id="@+id/message_text_view"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@color/friend_text_color"
                android:textColor="@color/white"
                android:paddingTop="@dimen/eight_padding"
                android:paddingLeft="@dimen/eight_padding"
                android:paddingRight="@dimen/eight_padding"
                android:textSize="16sp"
                android:layout_gravity="left"
                android:maxWidth="320dp"/>

            <TextView android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/dateTextSize"
                android:paddingLeft="@dimen/five_padding"
                android:paddingRight="@dimen/five_padding"
                android:paddingBottom="@dimen/five_padding"
                android:background="@color/friend_text_color"
                android:gravity="right"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
